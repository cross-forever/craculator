<Window x:Class="craculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:craculator"
        mc:Ignorable="d"
        Title="CRACULATOR" MinWidth="300" MinHeight="450"
        MaxWidth="300" MaxHeight="450">
    <Grid>
        <Grid Margin="0,0,0,334" ShowGridLines="true">
            <Viewbox HorizontalAlignment="Right">
                <TextBlock x:Name="outputText" TextWrapping="WrapWithOverflow" FontSize="80"></TextBlock>
            </Viewbox>
        </Grid>

        <Grid Name="buttonsGrid" Margin="0,100,0,0" ShowGridLines="false" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- BUTTONS -->

            <!-- Operators -->
            <Button Name="DivideButton" Grid.Row="0" Grid.Column="0">Divide</Button>
            <Button Name="MultiplyButton" Grid.Row="0" Grid.Column="1">Multiply</Button>
            <Button Name="SubtractButton" Grid.Row="0" Grid.Column="2">Subtract</Button>
            <Button Name="ClearButton" Grid.Row="4" Grid.Column="0">Clear</Button>
            <Button Name="PointButton" Grid.Row="4" Grid.Column="3">.</Button>
            <Button Name="BackspaceButton" Grid.Row="0" Grid.Column="3">Backspace</Button>
            <Button Name="AddButton" Grid.Row="1" Grid.Column="3">Add</Button>
            <Button Name="EqualsButton" Grid.RowSpan="2" Grid.Row="2" Grid.Column="3">Equals</Button>
            
            <!-- Numbers -->
            <Button Name="Number0" Grid.ColumnSpan="2" Grid.Row="4" Grid.Column="1">0</Button>
            <Button Name="Number1" Grid.Row="3" Grid.Column="0">1</Button>
            <Button Name="Number2" Grid.Row="3" Grid.Column="1">2</Button>
            <Button Name="Number3" Grid.Row="3" Grid.Column="2">3</Button>
            <Button Name="Number4" Grid.Row="2" Grid.Column="0">4</Button>
            <Button Name="Number5" Grid.Row="2" Grid.Column="1">5</Button>
            <Button Name="Number6" Grid.Row="2" Grid.Column="2">6</Button>
            <Button Name="Number7" Grid.Row="1" Grid.Column="0">7</Button>
            <Button Name="Number8" Grid.Row="1" Grid.Column="1">8</Button>
            <Button Name="Number9" Grid.Row="1" Grid.Column="2">9</Button>
        </Grid>
    </Grid>
</Window>
